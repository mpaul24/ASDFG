<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/notismallBack"
    android:layout_weight="6.5"
    android:background="#383838">

    <ImageView
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_weight="1.25"
        android:id="@+id/status_albumart"
        android:layout_marginRight="3dp"
        android:scaleType="centerCrop"
        />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="2.85"
        android:layout_height="64dp"
        android:weightSum="5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="title"
            android:id="@+id/status_title"
            android:singleLine="true"
            android:textColor="#ebebeb"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="artist"
            android:id="@+id/status_artist"
            android:gravity="center_vertical"
            android:singleLine="true" />
    </LinearLayout>

    <ImageButton
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:id="@+id/status_prev"
        android:layout_weight=".8"
        android:background="?android:selectableItemBackground"
        android:src="@drawable/previous_icon_white"
        android:paddingLeft="10dp"
        android:scaleType="centerCrop"
        android:paddingRight="10dp" />

    <ImageButton
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:id="@+id/status_play"
        android:layout_weight=".8"
        android:background="?android:selectableItemBackground"
        android:paddingLeft="10dp"
        android:scaleType="centerCrop"
        android:paddingRight="10dp" />

    <ImageButton
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_weight=".8"
        android:id="@+id/status_next"
        android:background="?android:selectableItemBackground"
        android:src="@drawable/next_icon_white"
        android:paddingLeft="10dp"
        android:scaleType="centerCrop"
        android:paddingRight="10dp" />

</LinearLayout>